<p id="notice"><%= notice %></p>

<h1>Listing Apartments</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Apartment#</th>
      <th>Apartmenttype</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apartments.each do |apartment| %>
      <tr>
        <td><%= apartment.apartmentnumber + " " +  apartment.property.propertyname %></td>
        <td><%= apartment.apartmenttype %></td>
        <td><%= apartment.status %></td>
        <td><%= link_to 'Show', apartment %></td>
        <td><%= link_to 'Edit', edit_apartment_path(apartment) %></td>
        <td><%= link_to 'Destroy', apartment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

